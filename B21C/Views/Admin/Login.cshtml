@model B21C.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Admin_Layout_Empty.cshtml";
}

<div class="login-box" style="margin: 12% auto;">
    <div class="login-box-body">
        <div class="login-logo">
            <b>B21C</b> <span class="font14 text-bold">ADMIN</span>
        </div>

        @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = Request.QueryString["ReturnURL"] }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8"></div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(function () {
        localStorage.clear();
    })
</script>