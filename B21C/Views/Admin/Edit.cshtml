@model B21C.Models.AdminEditVM
@{
    ViewBag.Title = "Edit Admin";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@section Title { Edit Admin }

<div class="row">
    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)
        
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Admin Information</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <span>Change?</span>
                        @Html.CheckBoxFor(m => m.isPasswordChange, new { @class = "minimal" })
                        <script>
                            $('#isPasswordChange').on('ifChecked', function (event) {
                                $('#Password').removeAttr("readonly");
                            });
                            $('#isPasswordChange').on('ifUnchecked', function (event) {
                                $('#Password').attr("readonly", "readonly");
                            });
                        </script>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "************", @readonly = true })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoleId)
                        @Html.DropDownListFor(m => m.RoleId, ViewBag.RoleList as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-flat btn-primary" value="Submit" />
                </div>
            </div><!-- /.box -->
        </div>
    }
    
</div>