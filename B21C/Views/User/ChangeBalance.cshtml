@model B21C.Models.BuyerChangeBalanceVM
@{
    ViewBag.Title = "Customer & Reseller - Change Balance";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@section Title { Customer & Reseller - Change Balance }

<div class="row">
    @using (Html.BeginForm("ChangeBalance", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Username)
        @Html.HiddenFor(m => m.Name)
        
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Information</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        <div>@Model.Username</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        <div>@Model.Name</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Balance)
                        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Remarks)
                        @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control", @rows = 6, @style = "resize:vertical ;" })
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-flat btn-primary" value="Submit" />
                </div>
            </div><!-- /.box -->
        </div>
    }
</div>