@model B21C.Models.OrderProductVM
@{
    ViewBag.Title = "Update Order Product";
    Layout = "~/Views/Shared/_Admin_Layout_Empty.cshtml";
}

@if (TempData["Message"] != null && TempData["Message"] == "Successfully done.")
{
    <script>
        $(function () {
            //parent.$.fancybox.close();
            parent.location.reload(true);
        });
    </script>
}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="box box-primary">
            @using (Html.BeginForm("_UpdateProduct", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.OrderProductId)
                @Html.HiddenFor(m => m.Name)
                @Html.HiddenFor(m => m.Price)
                @Html.HiddenFor(m => m.Weight)
                @Html.HiddenFor(m => m.ProductId)

                <div class="box-header">
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        <div>
                            @Model.Name
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price)
                        <div>
                            @Model.Price
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Weight)
                        <div>
                            @Model.Weight
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Quantity)
                        <div>
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-flat btn-primary" value="Submit" />
                </div>
            }
        </div>
    </div>
</div>
