@model B21C.Models.NewsletterVM
@{
    ViewBag.Title = "Edit Newsletter";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@section Title { Edit Newsletter }

<div class="row">
    @using (Html.BeginForm("Edit", "Newsletter", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Newsletter Information</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject)
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Body)
                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-flat btn-primary" value="Submit" />
                </div>
            </div><!-- /.box -->
        </div>
    }
</div>

<!-- CK Editor -->
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    $(function () {
        CKEDITOR.replace('Body');
    });
</script>