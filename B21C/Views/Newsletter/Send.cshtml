@model B21C.Models.SendNewsletterVM
@{
    ViewBag.Title = "Send Newsletter";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@section Title { Send Newsletter }

@Html.Partial("_Kendo")

<div class="row">
    @using (Html.BeginForm("Send", "Newsletter", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Send Newsletter Information</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Target)
                        @(Html.Kendo().MultiSelectFor(m => m.Target)
                            .AutoClose(false)
                            .Placeholder("Select Target")
                            .BindTo(ViewBag.TargetList)
                        )
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-flat btn-primary" onclick="return confirm('Are you sure to send this Newsletter?');" value="Submit" />
                </div>
            </div><!-- /.box -->
        </div>
    }
</div>

<!-- CK Editor -->
<script src="//cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
<script type="text/javascript">
    $(function () {
        CKEDITOR.replace('Body');
    });
</script>