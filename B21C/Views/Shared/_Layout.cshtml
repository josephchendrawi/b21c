                <script>
                    function reload_CartSum(){                        
                        $.ajax({
                            url: "@Url.Action("GetCartCount", "Home")",
                            type: "POST",
                            dataType: "json",
                            contentType: "application/json",
                            success: function (result) {
                                $("#item_add").removeClass('disabled');

                                if (result.Success)
                                {
                                    $('#simpleCart_quantity').html(result.Result);
                                }
                                else
                                {                                                                   
                                    alert(result.Message);
                                }
                            },
                            error: function () {
                                reload_CartSum();
                                //location.reload();
                            }
                        });
                    }

