                                                    $( "form#login" ).submit(function( event ) {
                                                        event.preventDefault();

                                                        $("#login-submit").val("Logging in...");
                                                        $("#login-submit").prop('disabled', true);

                                                        var data = { 
                                                            "email": $("#login-email").val(), 
                                                            "password": $("#login-password").val()
                                                        };

                                                        $.ajax({
                                                            url: "@Url.Action("Login", "Home")",
                                                            type: "POST",
