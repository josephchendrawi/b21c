
@{
    ViewBag.Title = "Reseller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="new-products">
    <div class="container">
        <h3>Bantuan</h3>

        @Html.Raw(ViewBag.Lookup)
    </div>
</div>

<style>
    .faq li {
        padding: 20px;
        list-style: none;
    }

    .faq li.q {
        background: none;
        font-weight: bold;
        font-size: 120%;
        border-bottom: 1px #ddd solid;
        cursor: pointer;

        color: #f77373;
        font-family: 'Glegoo', serif;
    }

    .faq li.q .arw {
        color: #606060 !important;
    }
        
    .faq li.q span {
        padding-right: 10px;
    }

    .faq li.a {
        background: #f8f8f8;
        display: none;
        color: #0d0d0d;
        padding-left: 55px;
        font-size: 14px;
    }

    .rotate {
        -moz-transform: rotate(90deg);
        -webkit-transform: rotate(90deg);
        transform: rotate(90deg);
    }
</style>

<script>
    // Accordian Action
    var action = 'click';
    var speed = "500";


    $(document).ready(function () {

        // Question handler
        $('li.q').on(action, function () {

            // gets next element
            // opens .a of selected question
            $(this).next().slideToggle(speed)

            // selects all other answers and slides up any open answer
            .siblings('li.a').slideUp();

            // Grab arw from clicked question
            var arw = $(this).children('.arw');

            // remove Rotate class from all arw except the active
            $('.arw').not(arw).removeClass('rotate');

            // toggle rotate class
            arw.toggleClass('rotate');

        });

    });
</script>


<style>
    .buy-button {
        font-size: 14px;
        color: #212121;
        margin: 0;
        text-decoration: none;
        text-transform: uppercase;
        padding: .5em 2em;
        border: 1px solid;
        border-radius: 25px;
    }
</style>