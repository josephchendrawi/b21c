@model B21C.Models.SignupVM
@{
    ViewBag.Title = "Daftar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- mail -->
<div class="mail">
    <div class="container">
        <h3>Daftar</h3>
        <br/>
        <div>
            <div class="col-md-6 col-md-offset-3 register">
                @using (Html.BeginForm("Signup", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "signup" }))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @placeholder = "Nama", required = "" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", required = "" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", required = "" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Konfirmasi Password", required = "" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Phone, new { @placeholder = "No. Handphone (optional)" })
                    </div>
                    <div class="form-group">
                        <select name="Gender" id="Gender" class="unselected" style="padding-left: 6px;">
                            <option value="" disabled selected>Gender (optional)</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>

                        <script>
                            $('#Gender').change(function () {
                                $(this).removeClass("unselected");
                            });
                        </script>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.BirthDate, new { @placeholder = "Tanggal Lahir (optional)" })

                        <script>
                            $(function () {
                                $('#BirthDate').mask('00/00/0000');
                            })

                            $('#BirthDate').focus(function () {
                                $(this).attr('placeholder', 'dd/MM/yyyy')
                            }).blur(function () {
                                $(this).attr('placeholder', 'Tanggal Lahir (optional)')
                            })
                        </script>
                    </div>
                    <div class="sign-up form-group text-center">
                        <input type="submit" value="Daftar Akun Baru">
                    </div>
                }
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!-- //mail -->