@model B21C.Models.BalanceTopUpVM
@{
    ViewBag.Title = "Top Up Saldo";
    Layout = "~/Views/Shared/_Layout_Empty.cshtml";
}

@if (TempData["Message"] != null && TempData["Message"] == "Successfully done.")
{
    <script>
        $(function () {
            alert("Konfirmasi telah berhasil dikirimkan. Silahkan tunggu beberapa saat untuk proses verifikasi.");
            parent.$.fancybox.close();
            //parent.location.reload(true);
        });
    </script>
}
else if (TempData["Message"] != null)
{
    <script>
        $(function () {
            alert("@TempData["Message"]");
        });
    </script>
}

<!-- single -->
<div class="single">
    <div class="container">
        <div class="text-center"><h3>KONFIRMASI TOP UP SALDO</h3></div>
        <br/>
        <div class="facts">
            <div class="register">
                @using (Html.BeginForm("_TopUp", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "signup row" }))
                {
                    <div class="form-group col-sm-12">
                        <small>Silahkan transfer dulu ke Bank yang diinginkan.</small>
                    </div>
                    <div class="form-group col-sm-12">
                        <select name="Bank" id="Bank" class="unselected" style="padding-left: 6px;">
                            <option value="" disabled selected>Bank</option>
                            <option value="BCA">BCA - 3400056632 a.n Nalvin</option>
                            <option value="Mandiri">Mandiri - 9000032554850 a.n Nalvin</option>
                            <option value="BRI">BRI - 551301014739532 a.n Nalvin</option>
                            <option value="BNI">BNI - 0204068060 a.n Elvianti</option>
                        </select>

                        <script>
                            $('#Bank').change(function () {
                                $(this).removeClass("unselected");
                            });
                        </script>
                    </div>
                    <div class="form-group col-sm-12">
                        <small>Setelah transfer berhasil, isi form di bawah untuk melakukan konfirmasi top-up.</small>
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.TextBoxFor(m => m.AccountName, new { @placeholder = "Nama Pemilik Rekening", required = "" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.TextBoxFor(m => m.Amount, new { @placeholder = "Jumlah Nominal (Rp.)", required = "" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.TextBoxFor(m => m.TransferDateTime, new { @placeholder = "Tanggal & Waktu Transfer", required = "" })
                    </div>                    
                    <script>
                        $(function () {
                            $('#TransferDateTime').mask('00/00/0000 00:00');
                        })

                        $('#TransferDateTime').focus(function () {
                            $(this).attr('placeholder', 'dd/MM/yyyy HH:mm')
                        }).blur(function () {
                            $(this).attr('placeholder', 'Tanggal & Waktu Transfer')
                        })
                    </script>
                    <div class="sign-up form-group col-sm-12">
                        <input type="submit" value="KONFIRMASI">
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<!-- //single -->